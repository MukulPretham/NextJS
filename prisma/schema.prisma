generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id
  name String
  email String @unique
  password String
}

model Customers{
  id String @id
  name String
  email String @unique
  image_url String @unique
  invoices Invoices[]
}

model Invoices{
  id Int @default(autoincrement()) @id
  customer_id String
  customer Customers @relation(fields: [customer_id],references: [id] , onDelete: Cascade)
  amount Int
  status String
  date String
}

model Revenue{
  S_no Int @default(autoincrement()) @id
  month String
  revenue Int
}


